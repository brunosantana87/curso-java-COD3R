package fundamentos;

/**
 * Essa classe representa...
 * 
 * @author Bruno Aarão Santana <brunosantana87@gmail.com> 
 * @email brunosantana87@gmail.com
 * @since 1.0
 *
 */

public class PrimeiroPrograma {

	public static void main(String[] args) {
		
		// Comentário de uma linha
		// Uma sentença de código termina com ;
		System.out.println("Olá, mundo! Primeiro programa! Botafogo será campeão!");
		System.out.println("Primeiro programa Parte #01!");
		System.out.println("Primeiro programa Parte #02!");
		
		/*
		 *  Comentário de múltiplas linhas
		 *  Linha 1
		 *  Linha 2
		 */
		
//		System.out.println();
		// Transformar uma linha em comentário: "ctrl + /" em qualquer lugar da linha
		
		/**
		 * Isso é comentário javadoc
		 * Com o javadoc vc pode colocar informações que serão lidas p/ gerar a documentação 
		 */
	}
}
